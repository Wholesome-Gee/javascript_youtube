extends base.pug

block contents 
  if errorMessage 
    span=errorMessage
  form(method='post')
    input(placeholder="이름", name="name", type="text", required)
    input(placeholder="이메일", name="email", type="email", required)
    input(placeholder="닉네임", name="username", type="text", required)
    input(placeholder="비밀번호", name="password", type="password", required)
    input(placeholder="비밀번호 재입력", name="password2", type="password", required)
    input(placeholder="사는곳(시,군)", name="location", type="text", required)
    input(type="submit", value="Join")
    include partials/social-login
  div.auth-switch
    span 이미 회원이십니까? 
    a(href="/login") 로그인 하러 가기 &rarr;